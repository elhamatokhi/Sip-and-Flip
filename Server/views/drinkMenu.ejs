<%- include('partials/header',{title: 'Drinks MENU'}) %>
<div>
  <a href="/coffee">Coffee</a>
  <a href="/chocolate">Chocolate</a>
  <a href="/others">Others</a>
</div>

<div class="drinks-container">
  <% drinks.forEach((p, index) => { %>
  <div class="drink-card">
    <img
      src="<%= p.image || '/images/default-drink.jpg' %>"
      alt="<%= p.name %> image"
      class="drink-image"
    />
    <div class="drink-info">
      <h3><%= p.name %></h3>
      <p><%= p.description %></p>
      <span class="drink-price">â‚¬<%= p.price.toFixed(2) %></span>
    </div>
  </div>
  <% }); %>
</div>

