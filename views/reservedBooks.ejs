<%- include('partials/header',{title: 'Reseverd Books'}) %>

<h2 class="page-title">Your Reserved Books</h2>

<% if (error) { %>
<div class="error-message" id="reserve-error"><%= error %></div>
<% } %> <% if (success) { %>
<div id="reserve-success" class="success">Book reserved successfully!</div>
<% } %>

<div class="books-container">
  <% if (reservedBooks.length === 0) { %>
  <p>You have not reserved any books yet.</p>
  <% } else { %> <% reservedBooks.forEach(book => { %>
  <div class="book-card reserved">
    <img src="<%= book.image %>" alt="<%= book.title %>" class="book-image" />
    <div class="book-info">
      <h3><%= book.title %></h3>
      <p><%= book.description %></p>
      <p class="reserved-on">
        Reserved on: <%= new Date(book.date).toLocaleDateString() %>
      </p>
    </div>
  </div>
  <% }); %> <% } %>
</div>

<%- include('partials/footer') %>
